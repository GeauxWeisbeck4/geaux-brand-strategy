---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import SignupForm from '../components/SignupForm.astro';

const seo = {
  title: 'Geauxs Brand Strategy Sprint | Andrew Weisbeck and Section4',
  description: 'This is the website and blog for the brand strategy sprint for Section4',
}
---

<style>
  .hero__article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in">Brand Strategy Sprint - Coming Soon!</h1>
      <p class="fade-in">Be the first to know when our new site is live!</p>
      <SignupForm />
    </article>
  </Container>
</Layout>

